            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="row mt-4">
                    <div class="col-md-4">
                        <!-- Update the job portal card -->
                        <div class="card job-portal-card" data-bs-toggle="collapse" href="#jobPortalContent" role="button" aria-expanded="false" aria-controls="jobPortalContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Job Portal</h5>
                                <p class="card-text">Access the job portal to find job opportunities.</p>
                            </div>
                        </div>

                        <div class="collapse" id="jobPortalContent">
                            <div class="card card-body">
                                <h5>List of Vacancies</h5>
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Vacancy 1
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#vacancyModal1">View</button>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Vacancy 2
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#vacancyModal2">View</button>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Vacancy 3
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#vacancyModal3">View</button>
                                    </li>
                                    <!-- Add more vacancies as needed -->
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="card request-letters-card" data-bs-toggle="collapse" href="#requestLettersContent" role="button" aria-expanded="false" aria-controls="requestLettersContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Request Letters</h5>
                                <p class="card-text">Submit requests for letters and track their status.</p>
                            </div>
                        </div>
                        <div class="collapse" id="requestLettersContent">
                            <div class="card card-body">
                                
                                <form class="form">
                                    <p class="title">Request Letter </p>
                                    <p class="message">Fill the letter carefully </p>
                                        <div class="flex">
                                        <label>
                                            <input required="" placeholder="" type="text" class="input">
                                            <span>Name</span>
                                        </label>
                                
                                        <label>
                                            <input required="" placeholder="" type="text" class="input">
                                            <span>Comapany</span>
                                        </label>
                                    </div>  
                                            
                                    <label>
                                        <input required="" placeholder="" type="email" class="input">
                                        <span>Title</span>
                                    </label> 
                                        
                                    <label>
                                        <input required="" placeholder="" type="password" class="input">
                                        <span>Realavent Person</span>
                                    </label>
                                   
                                    <button class="submit">Submit</button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card registration-letter-card" data-bs-toggle="collapse" href="#registrationLetterContent" role="button" aria-expanded="false" aria-controls="registrationLetterContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Registration Letter</h5>
                                <p class="card-text">Get your registration letters quickly and easily.</p>
                            </div>
                        </div>
                        <div class="collapse" id="registrationLetterContent">
                            <div class="card card-body">
                               
                                <div class="row">

                                    <div class="col-lg-6" style="margin-top: 1em;">
                                        <div style="margin-right: 1em;">
                                            Letter1
                                        </div></div>
                                    <div class="col-lg-6">
                                        <div class="buttonn">
                                            Download
                                        </div>
                                    </div>

                                </div>

                                <div class="row" style="margin-top: 1em;">

                                    <div class="col-lg-6" style="margin-top: 1em; ">Letter 2</div>
                                    <div class="col-lg-6">
                                        <div class="buttonn">
                                            Download
                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>
