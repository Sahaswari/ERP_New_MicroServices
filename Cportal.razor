    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-2 d-none d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link dropdown-toggle coo" data-bs-toggle="collapse" href="#departmentSubmenu" role="button" aria-expanded="false" aria-controls="departmentSubmenu">
                                <span class="icon">🧾</span> Department
                            </a>
                            <div class="collapse" id="departmentSubmenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#"><span class="icon">🎓</span> Alumni</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#"><span class="icon">🔬</span> Laboratory</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#"><span class="icon">🗓</span> Workload</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#trainingSubmenu" role="button" aria-expanded="false" aria-controls="trainingSubmenu">
                                            <span class="icon">📚</span> Training
                                        </a>
                                        <div class="collapse" id="trainingSubmenu">
                                            <ul class="nav flex-column">
                                                <li class="nav-item">
                                                    <a class="nav-link" href="/login"><span class="icon">🔒</span> Logout</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="row mt-4">
                    <div class="col-md-4">
                        <!-- Update the job portal card -->
                        <div class="card job-portal-card" data-bs-toggle="collapse" href="#contentjob" role="button" aria-expanded="false" aria-controls="jobPortalContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Job Portal</h5>
                                <p class="card-text">Access the job portal to find job opportunities.</p>
                            </div>
                        </div>

                        <div class="collapse" id="contentjob">
                            <div class="card card-body">
                                <h5>List of Vacancies</h5>
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Vacancy 1
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#vacancyModal1">View</button>
                                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#editModal1">Edit</button>
                                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="collapse" href="#cvList1" role="button" aria-expanded="false" aria-controls="cvList1">CVs</button>
                                        </div>
                                    </li>
                                </ul>
                                <div class="collapse" id="cvList1">
                                    <div class="card card-body">
                                        <h5>Available CVs</h5>
                                        <ul>
                                            <li><a href="#">CV 1</a> <button class="btn btn-primary btn-sm">Download</button></li>
                                            <li><a href="#">CV 2</a> <button class="btn btn-primary btn-sm">Download</button></li>
                                        </ul>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div class="collapse" id="jobPortalContent">
                            <div class="card card-body">
                                <h5>List of Vacancies</h5>
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Vacancy 1
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#vacancyModal1">View</button>
                                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#editModal1">Edit</button>
                                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#uploadModal1">CVs</button>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="card request-letters-card" data-bs-toggle="collapse" href="#requestLettersContent" role="button" aria-expanded="false" aria-controls="requestLettersContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Request Letters</h5>
                                <p class="card-text">Submit requests for letters and track their status.</p>
                            </div>
                        </div>
                        <div class="collapse" id="requestLettersContent">
                            <div class="card card-body">
                                <h5>List of Letters</h5>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Letter 1</h5>
                                        <p class="card-text">Description of Letter 1</p>
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#letterModal1">View</button>
                                    </div>
                                </div>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Letter 2</h5>
                                        <p class="card-text">Description of Letter 2</p>
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#letterModal2">View</button>
                                    </div>
                                </div>
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Letter 3</h5>
                                        <p class="card-text">Description of Letter 3</p>
                                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#letterModal3">View</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="card registration-letter-card" data-bs-toggle="collapse" href="#registrationLetterContent" role="button" aria-expanded="false" aria-controls="registrationLetterContent">
                            <div class="card-body text-center">
                                <h5 class="card-title">Add New Vacancy </h5>
                                <p class="card-text">Get your registration letters quickly and easily.</p>
                            </div>
                        </div>
                        <div class="collapse" id="registrationLetterContent">
                            <div class="card card-body">

                                <form class="form">
                                    <p class="title">Add Vacancy</p>
                                    <p class="message">Fill the letter carefully </p>
                                    <div class="flex">
                                        <label>
                                            <input required="" placeholder="" type="text" class="input">
                                            <span>Name</span>
                                        </label>

                                        <label>
                                            <input required="" placeholder="" type="text" class="input">
                                            <span>Category</span>
                                        </label>
                                    </div>

                                    <label>
                                        <input required="" placeholder="" type="text" class="input">
                                        <span>Description</span>
                                    </label>

                                    <label>
                                        <input required="" placeholder="" type="text" class="input">
                                        <span>Company</span>
                                    </label>

                                    <button class="submit">Add</button>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </main>

        </div>
    </div>

    <!-- Modals -->
    <div class="modal fade" id="vacancyModal1" tabindex="-1" aria-labelledby="vacancyModal1Label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vacancyModal1Label">Vacancy 1 Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Title: Vacancy 1</h6>
                    <p>Category: Category 1</p>
                    <p>Description: Description of Vacancy 1</p>
                    <p>Company: Company XYZ</p>
                    <hr>
                    <button type="button" class="btn btn-primary">Upload CV</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="vacancyModal2" tabindex="-1" aria-labelledby="vacancyModal2Label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vacancyModal2Label">Vacancy 2 Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Title: Vacancy 2</h6>
                    <p>Category: Category 2</p>
                    <p>Description: Description of Vacancy 2</p>
                    <p>Company: Company ABC</p>
                    <hr>
                    <button type="button" class="btn btn-primary">Upload CV</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="vacancyModal3" tabindex="-1" aria-labelledby="vacancyModal3Label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vacancyModal3Label">Vacancy 3 Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Title: Vacancy 3</h6>
                    <p>Category: Category 3</p>
                    <p>Description: Description of Vacancy 3</p>
                    <p>Company: Company PQR</p>
                    <hr>
                    <button type="button" class="btn btn-primary">Upload CV</button>
                </div>
            </div>
        </div>
    </div>

    <!--Modal For Viewing Letters-->
    <div class="modal fade" id="letterModal1" tabindex="-1" aria-labelledby="vacancyModal1Label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vacancyModal1Label">Letter 1 Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Name: Vacancy 1</h6>
                    <p>Company: 123</p>
                    <p>Title:  ABC</p>
                    <p>Realavant Person:  XYZ</p>
                    <hr>
                    <button type="button" class="btn btn-primary">Upload Confirm Letter</button>
                    <button type="button" class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-TptcTMcfxT09DL4JgPr2rAlPe+4Byosd/9fWEUQNra3Ik4p4klHFrk5jqZL8bNJ2" crossorigin="anonymous"></script>

  

</body>
